---
import { DEFAULT_LANGUAGE_ID, SUPPORTED_LANGUAGES_IDS, SUPPORTED_LANGUAGES_RECORD } from '@lib/languageUtils';
import { UI_DICTIONARY } from '@lib/uiDictionary';
---

<html lang={DEFAULT_LANGUAGE_ID}>
    <head>
        <meta charset="UTF-8">
        <title>404 · {SUPPORTED_LANGUAGES_IDS.map((lang) => UI_DICTIONARY.websiteTitle[lang]).join(' · ')}</title>
        <meta name='viewport' content='width=device-width,initial-scale=1.0,viewport-fit=cover' />
        <meta name='generator' content={Astro.generator} />
    </head>
    <body>
        <div class='container'>
            {SUPPORTED_LANGUAGES_IDS.map((lang) => (
                <div class='message' dir={SUPPORTED_LANGUAGES_RECORD[lang].dir}>
                    <Fragment set:html={(UI_DICTIONARY.error404Message[lang])?.trim()} />
                </div>
            ))}
        </div>
    </body>
</html>

<style lang='scss'>
    body {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        min-height: 100dvh;
        padding: 2rem;
        margin: 0px;
        box-sizing: border-box;
    }
    .container {
        display: flex;
        flex-direction: column;
        row-gap: 1rem;
        max-width: 45ch;
    }
</style>